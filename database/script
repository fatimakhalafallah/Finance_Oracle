DROP TABLE DAILY_TRANS CASCADE CONSTRAINTS ; 

CREATE TABLE DAILY_TRANS ( 
  VOUCHER_NO          NUMBER (20)   NOT NULL, 
  TRANS_DATE          DATE, 
  CURRENCY            VARCHAR2 (10), 
  RATE                NUMBER, 
  AMOUNT              NUMBER (20,2), 
  TRANS_TYPE          NUMBER (1), 
  DESCRIPTION         VARCHAR2 (300), 
  DOC_CHEQUE_NO       VARCHAR2 (100), 
  CHEQUE_DATE         DATE, 
  IDENTIFICATION_NUM  VARCHAR2 (70), 
  APPROVAL_FLAG       VARCHAR2 (1), 
  BANK_NO             NUMBER (3), 
  COMPLETE_FLAG       NUMBER (2), 
  BENEF_SITE          VARCHAR2 (2000), 
  STATUS              VARCHAR2 (2), 
  CHEQUE_EXCH_DATE    DATE, 
  CANCEL_DATE         DATE, 
  RECEIPTS_VOUCH_SER  NUMBER, 
  VOUCHER             VARCHAR2 (70), 
  LAST_UPDATE         DATE, 
  EXCH_DATE           DATE, 
  OLD_VOUCHER_NO      VARCHAR2 (70), 
  SER_NO              NUMBER, 
  ASSETS_FLAG         NUMBER, 
  CANCEL_FLAG         NUMBER, 
  CANCEL_USER_ID      NUMBER, 
  CLOSING_FLAG        NUMBER (1), 
  REC1                NUMBER, 
  BANK_NAME           VARCHAR2 (200), 
  TRANS_TYPE_OLD      NUMBER, 
  APPROVAL_DATE       DATE, 
  APPROVAL_USER       NUMBER, 
  V_TB                NUMBER (20), 
  MNG_APPROVAL_DATE   DATE, 
  MNG_APPROVAL        NUMBER, 
  MNG_APPROVAL_FLAG   VARCHAR2 (2), 
  RECIPIENT_NAME      VARCHAR2 (200), 
  M_ACC_NO            VARCHAR2 (20) ) ; 
  
  
  DROP TABLE DAILY_TRANS_DETAILS CASCADE CONSTRAINTS ; 

CREATE TABLE DAILY_TRANS_DETAILS ( 
  VOUCHER_NO       NUMBER (20)   NOT NULL, 
  TRANS_SERIAL     NUMBER, 
  ACC_NO           VARCHAR2 (70)  NOT NULL, 
  DEBIT_CREDIT     VARCHAR2 (1), 
  DET_DESCRIPTION  VARCHAR2 (500), 
  DOCUMENT_NO      VARCHAR2 (200), 
  CURRENCY         VARCHAR2 (100), 
  RATE             NUMBER (20,3), 
  MODULE           VARCHAR2 (4), 
  ASSETS_FLAG      NUMBER (1), 
  OLD_VOUCHER_NO   VARCHAR2 (70), 
  PR_NO            VARCHAR2 (20), 
  PR2              VARCHAR2 (20), 
  INV              VARCHAR2 (300), 
  INV2             VARCHAR2 (100), 
  INV3             VARCHAR2 (300), 
  UPD_UCODE        VARCHAR2 (20), 
  ENTRY_TIME       VARCHAR2 (5), 
  UPD_TIME         VARCHAR2 (5), 
  LAST_UPDATE      DATE, 
  RATE1            VARCHAR2 (20), 
  UCODE            NUMBER, 
  USER_ID          NUMBER, 
  ENTRY_DATE       DATE, 
  TRANS_DATE       DATE, 
  DEBIT_AMNT1      NUMBER (20,4), 
  CREDIT_AMNT1     NUMBER (20,4), 
  V_TB             NUMBER (20), 
  OLDRATE          NUMBER, 
  OLDCURRENCY      VARCHAR2 (10), 
  DOCUMENT_NO1     VARCHAR2 (100), 
  DCREDIT          NUMBER (20,2), 
  DDEBIT           NUMBER (20,2), 
  TRANS_DATE1      VARCHAR2 (100), 
  RECEIPTS_ACC     NUMBER (2), 
  DOCUMENT_NO2     VARCHAR2 (70), 
  DEBIT_AMNT       NUMBER (20,3), 
  CREDIT_AMNT      NUMBER (20,3), 
  SERIAL           NUMBER (20) ) ; 

DROP TABLE MAIN_ACCOUNTS CASCADE CONSTRAINTS ; 

CREATE TABLE MAIN_ACCOUNTS ( 
  LOW_ACC_NO         VARCHAR2 (100), 
  PARENT_ACC_NO      VARCHAR2 (100), 
  ACC_NAME_ARA       VARCHAR2 (200), 
  ACC_NAME_ENG       VARCHAR2 (200), 
  ACC_CLASS          NUMBER (20), 
  ACC_STATUS         NUMBER (2), 
  ACC_LEVEL          NUMBER (2), 
  CREATED_USER       NUMBER, 
  CREATED_DATE       DATE, 
  HIGH_ACC_NO        VARCHAR2 (100), 
  NAME               VARCHAR2 (100), 
  COST_CENTER_M      NUMBER, 
  OLD_PARENT_ACC_NO  NUMBER, 
  PRIMARY KEY ( LOW_ACC_NO ) ) ; 


DROP TABLE DETAILS_ACCOUNTS CASCADE CONSTRAINTS ; 

CREATE TABLE DETAILS_ACCOUNTS ( 
  MAIN_ACC_NO       VARCHAR2 (70), 
  ACC_NO            VARCHAR2 (20)  NOT NULL, 
  ACC_NAME_ARA      VARCHAR2 (200), 
  ACC_NAME_ENG      VARCHAR2 (200), 
  ACCOUNT_CURRENCY  VARCHAR2 (20), 
  DET_ACC_STATUS    NUMBER (2)    DEFAULT '1', 
  CURRENCY          NUMBER (2), 
  ACC_LEVEL         NUMBER (2), 
  COST_CENTER       NUMBER (10), 
  COST_CENTER_M     NUMBER, 
  C_C_O             NUMBER, 
  PRIMARY KEY ( ACC_NO ) ) ; 


DROP TABLE CASH_ACCOUNTS CASCADE CONSTRAINTS ; 

CREATE TABLE CASH_ACCOUNTS ( 
  ACC_NO       VARCHAR2 (70)  NOT NULL, 
  ACC_TYPE     NUMBER (1), 
  USER_ID      NUMBER, 
  INSERT_DATE  DATE, 
  TYPE_NO      VARCHAR2 (2), 
  PRIMARY KEY ( ACC_NO ) ) ; 
  
  DROP TABLE LKP_BANKS CASCADE CONSTRAINTS ; 

CREATE TABLE LKP_BANKS ( 
  BANK_NO        NUMBER (3)    NOT NULL, 
  BANK_NAME      VARCHAR2 (100), 
  BANK_NAME_ARA  NVARCHAR2 (140), 
  B_TYPE         NUMBER (1), 
  B_PETRO        NUMBER (1)    DEFAULT 0, 
  PRIMARY KEY ( BANK_NO ) ) ; 

DROP TABLE BANKS_ACC CASCADE CONSTRAINTS ; 

CREATE TABLE BANKS_ACC ( 
  BANK_NO   NUMBER, 
  CURR      VARCHAR2 (4), 
  ACC_NO    VARCHAR2 (20), 
  B_CURR    VARCHAR2 (4), 
  DEFAULT1  NUMBER (1) ) ; 

DROP TABLE LKP_BANK_BRANCH CASCADE CONSTRAINTS ; 

CREATE TABLE LKP_BANK_BRANCH ( 
  BANK_NO         NUMBER (5), 
  BANK_BRANCH_NO  NUMBER (5)    NOT NULL, 
  BBANK_NAME      VARCHAR2 (140), 
  BBANK_NAME_ARA  NVARCHAR2 (140), 
  CONSTRAINT PK_LKP_BANK_BRANCH
  PRIMARY KEY ( BANK_BRANCH_NO ) ) ; 

ALTER TABLE LKP_BANK_BRANCH ADD  CONSTRAINT LK_BANK_BRANCH_FK1
 FOREIGN KEY (BANK_NO) 
  REFERENCES PETRO.LKP_BANKS (BANK_NO) ;


DROP TABLE ACC_CLASSES CASCADE CONSTRAINTS ; 

CREATE TABLE ACC_CLASSES ( 
  CLASS_NO     NUMBER        NOT NULL, 
  CLASS_NAME   VARCHAR2 (100), 
  USER_ID      NUMBER, 
  INSERT_DATE  DATE, 
  PRIMARY KEY ( CLASS_NO ) ) ; 

DROP TABLE ACCOUNT_CODES CASCADE CONSTRAINTS ; 

CREATE TABLE ACCOUNT_CODES ( 
  ACCOUNT_CODE  VARCHAR2 (30)  NOT NULL, 
  ACCOUNT_NAME  VARCHAR2 (100)  NOT NULL, 
  ACCOUNT_TYPE  VARCHAR2 (1), 
  LOOKUP        VARCHAR2 (30), 
  CONSTRAINT AC_PK
  PRIMARY KEY ( ACCOUNT_CODE ) ) ; 


DROP TABLE TRANS_ACCOUNT CASCADE CONSTRAINTS ; 

CREATE TABLE TRANS_ACCOUNT ( 
  ACC_NO        VARCHAR2 (20)  NOT NULL, 
  ACC_NAME_ARA  VARCHAR2 (200) ) ; 

DROP TABLE CHEQUE CASCADE CONSTRAINTS ; 

